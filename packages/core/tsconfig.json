{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "outDir": ".",
    "removeComments": true,
    "allowJs": false,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    // "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": ["src", "utils"],
  "exclude": [
    "node_modules", "dist"
  ]
}
