{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "strict": true,
    "outDir": "./dist",
    "removeComments": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    // "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
